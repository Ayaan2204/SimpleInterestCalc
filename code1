#include <stdio.h>

void main()
{
    int p;
    float r;
    int t;
    float interest;
    
    printf("Welcome to the basic interest calculator.\n");
    printf("Please provide the following data.\n ");
    printf("the principal amount invested:\n");
    
    scanf("%d",&p);
    
    printf("the rate of interest in decimal:\n");
    scanf("%f",&r);
    
    printf("the time in years\n");
    scanf("%d",&t);
   
   interest=p*r*t/100;
   printf("%f",interest);
}
